<UserControl x:Class="CourseSelectionSystem.Views.Admin.AdminCourseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vmAdmin="clr-namespace:CourseSelectionSystem.ViewModels.Admin"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vmAdmin:AdminCourseViewModel}"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📚 课程管理" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="新增课程：" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <TextBox Text="{Binding NewCourseId, UpdateSourceTrigger=PropertyChanged}" 
                     Width="100" Margin="5,0" 
                     ToolTip="课程代码 (如 CS101)"/>

            <TextBox Text="{Binding NewCourseName, UpdateSourceTrigger=PropertyChanged}" 
                     Width="150" Margin="5,0" 
                     ToolTip="课程名称"/>

            <TextBox Text="{Binding NewCreditText, UpdateSourceTrigger=PropertyChanged}" 
                     Width="60" Margin="5,0" 
                     ToolTip="学分"/>

            <Button Content="添加课程" Command="{Binding AddCourseCommand}" Width="80" Margin="15,0,0,0" Background="#4CAF50" Foreground="White"/>
            <Button Content="删除选中" Command="{Binding DeleteCourseCommand}" Width="80" Margin="15,0,0,0" Background="#F44336" Foreground="White"/>
            <Button Content="刷新列表" Command="{Binding LoadCoursesCommand}" Width="80" Margin="15,0,0,0"/>
        </StackPanel>

        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding Courses}"
                  SelectedItem="{Binding SelectedCourse, Mode=TwoWay}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="课程代码" Binding="{Binding CourseID}" Width="120"/>
                <DataGridTextColumn Header="课程名称" Binding="{Binding CourseName}" Width="200"/>
                <DataGridTextColumn Header="学分" Binding="{Binding Credit}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>