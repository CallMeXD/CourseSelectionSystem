<UserControl x:Class="CourseSelectionSystem.Views.Admin.AdminOfferingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vmAdmin="clr-namespace:CourseSelectionSystem.ViewModels.Admin"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vmAdmin:AdminOfferingViewModel}"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📅 开课计划管理" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" Padding="10" Margin="0,0,0,15" Background="#FAFAFA">
            <StackPanel>
                <TextBlock Text="新增开课计划" FontWeight="Bold" Margin="0,0,0,10"/>

                <WrapPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,15,5">
                        <TextBlock Text="课程"/>
                        <ComboBox ItemsSource="{Binding AvailableCourses}" 
                                  SelectedItem="{Binding SelectedNewCourse}"
                                  DisplayMemberPath="CourseName"
                                  Width="150"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,15,5">
                        <TextBlock Text="任课教师"/>
                        <ComboBox ItemsSource="{Binding AvailableTeachers}" 
                                  SelectedItem="{Binding SelectedNewTeacher}"
                                  DisplayMemberPath="UserName"
                                  Width="120"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,15,5">
                        <TextBlock Text="学期 (如 2025-1)"/>
                        <TextBox Text="{Binding NewSemester}" Width="100"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,15,5">
                        <TextBlock Text="上课地点"/>
                        <TextBox Text="{Binding NewLocation}" Width="100"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,15,5">
                        <TextBlock Text="容量"/>
                        <TextBox Text="{Binding NewCapacityText}" Width="60"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10,0,0,0">
                        <Button Content="发布开课" Command="{Binding AddOfferingCommand}" Width="80" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" Height="25"/>
                        <Button Content="删除选中" Command="{Binding DeleteOfferingCommand}" Width="80" Margin="0,0,10,0" Background="#F44336" Foreground="White" Height="25"/>
                        <Button Content="刷新" Command="{Binding LoadDataCommand}" Width="60" Height="25"/>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding Offerings}"
                  SelectedItem="{Binding SelectedOffering}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding OfferingID}" Width="50"/>
                <DataGridTextColumn Header="学期" Binding="{Binding Semester}" Width="100"/>
                <DataGridTextColumn Header="课程名称" Binding="{Binding Course.CourseName}" Width="150"/>
                <DataGridTextColumn Header="任课教师" Binding="{Binding Teacher.UserName}" Width="100"/>
                <DataGridTextColumn Header="地点" Binding="{Binding Location}" Width="120"/>
                <DataGridTextColumn Header="容量" Binding="{Binding Capacity}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>