<UserControl x:Class="CourseSelectionSystem.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:CourseSelectionSystem.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:ProfileViewModel}"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="👤 个人信息设置" FontSize="28" FontWeight="Bold" Margin="0,0,0,30" Foreground="#333"/>

        <Border Grid.Row="1" Background="White" Padding="30" CornerRadius="5" BorderBrush="#EEE" BorderThickness="1">
            <StackPanel MaxWidth="400" HorizontalAlignment="Left">

                <TextBlock Text="账号 (ID)" Foreground="Gray" Margin="0,0,0,5"/>
                <TextBox Text="{Binding UserId}" IsReadOnly="True" Background="#F5F5F5" Padding="5" Margin="0,0,0,15"/>

                <TextBlock Text="角色" Foreground="Gray" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Role}" IsReadOnly="True" Background="#F5F5F5" Padding="5" Margin="0,0,0,15"/>

                <TextBlock Text="姓名" Margin="0,0,0,5"/>
                <TextBox Text="{Binding UserName}" Padding="5" Margin="0,0,0,15"/>

                <TextBlock Text="新密码 (留空则不修改)" Margin="0,0,0,5"/>
                <PasswordBox x:Name="pwdNew" Padding="5" Margin="0,0,0,20" Height="30"/>

                <Button Content="保存更改" 
                        Command="{Binding SaveChangesCommand}" 
                        CommandParameter="{Binding ElementName=pwdNew}"
                        Height="40" Background="#2196F3" Foreground="White" FontSize="16" FontWeight="Bold"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>