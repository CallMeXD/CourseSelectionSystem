<UserControl x:Class="CourseSelectionSystem.Views.Student.StudentEnrolledView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vmStudent="clr-namespace:CourseSelectionSystem.ViewModels.Student"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vmStudent:StudentEnrolledViewModel}"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📖 我的课程" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10">
            <Button Content="退选课程" Command="{Binding DropCourseCommand}" Width="100" Background="#F44336" Foreground="White" Margin="0,0,15,0"/>
            <Button Content="刷新列表" Command="{Binding LoadEnrollmentsCommand}" Width="80"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding MyEnrollments}"
                  SelectedItem="{Binding SelectedEnrollment, Mode=TwoWay}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0,50,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="课程名称" Binding="{Binding Offering.Course.CourseName}" Width="180"/>
                <DataGridTextColumn Header="任课教师" Binding="{Binding Offering.Teacher.UserName}" Width="100"/>
                <DataGridTextColumn Header="学期" Binding="{Binding Offering.Semester}" Width="100"/>
                <DataGridTextColumn Header="地点" Binding="{Binding Offering.Location}" Width="120"/>
                <DataGridTextColumn Header="选课时间" Binding="{Binding EnrollDate, StringFormat=yyyy-MM-dd}" Width="120"/>
                <DataGridTextColumn Header="成绩" Binding="{Binding Grade}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>