<UserControl x:Class="CourseSelectionSystem.Views.Student.StudentSelectCourseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vmStudent="clr-namespace:CourseSelectionSystem.ViewModels.Student"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vmStudent:StudentSelectCourseViewModel}"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="✅ 课程选择" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Top">
            <Button Content="选择选中课程" Command="{Binding SelectCourseCommand}" Width="120" Margin="0,0,15,0" Background="#4CAF50" Foreground="White"/>
            <Button Content="刷新列表" Command="{Binding LoadOfferingsCommand}" Width="80"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding AvailableOfferings}"
                  SelectedItem="{Binding SelectedOffering, Mode=TwoWay}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0,50,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="开课ID" Binding="{Binding OfferingID}" Width="70"/>
                <DataGridTextColumn Header="课程代码" Binding="{Binding CourseID}" Width="100"/>
                <DataGridTextColumn Header="课程名称" Binding="{Binding Course.CourseName}" Width="180"/>
                <DataGridTextColumn Header="教师" Binding="{Binding Teacher.UserName}" Width="100"/>
                <DataGridTextColumn Header="学期" Binding="{Binding Semester}" Width="100"/>
                <DataGridTextColumn Header="地点" Binding="{Binding Location}" Width="120"/>
                <DataGridTemplateColumn Header="容量/已选" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Capacity}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>